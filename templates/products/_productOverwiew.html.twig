<a href="{{ path('product.show', {'id':product.id}) }}" class="box-container container-3 container-tab-4 container-pho-6">
    <div class="box">
        {#<div class="box-header icon-img">
            <img src="assets/img/set.icon.png" alt="">
        </div>#}
        <div class="box-header">
            {% if product.imageName and product.imageFile  %}
                <img src="{{ vich_uploader_asset(product, 'imageFile') | imagine_filter('medium') }}" alt="" class="card-img-top" style="width: 100%; height: auto;">
            {% else %}
                <img src="{{ asset('build/images/empty.jpg') }}" alt="" class="card-img-top" style="width: 100%; height: auto;">
            {% endif %}
        </div>
        <div class="box-body">
            <div class="box-title-medium">
                {{ product.nom }}
            </div>
            <div class="box-content">
                {{ product.description | nl2br }}
            </div>
            <div class="box-footer">{{ product.prixHT }} â‚¬</div>
        </div>
    </div>
</a>