{% extends 'base/base.html.twig' %}

{% block portal %}
    <a  href="{{ path('category.show', { 'id': product.category.id }) }}">Retour</a>
{% endblock %}

{% block body %}

    <div class="container-row">
        <div class="box-body container-8">
            {% if product.imageName and product.imageFile  %}
                <img src="{{ vich_uploader_asset(product, 'imageFile') | imagine_filter('medium') }}" alt="" class="card-img-top" style="height: 150px !important;">
            {% else %}
                <img src="{{ asset('build/images/empty.jpg') }}" alt="" class="card-img-top" style="height: 500px; width: 100%;">
            {% endif %}
        </div>
        <div class="box-body container-4">
            <h1>{{ product.nom }}</h1>
            <h2>{{ product.description }}</h2>
            <table class="table-template">
                <tr>
                    <td>Prix HT</td>
                    <td>{{ product.prixHT }} €</td>
                </tr>
                <tr>
                    <td>Prix TTC</td>
                    <td>{{ product.prixTTC }} €</td>
                </tr>
            </table>
            <div id="commande" class="button">Commander</div>
        </div>
    </div>

    <div id="commandeModal" class="modal-container dp-none">
        <div class="modal">
            <div class="box">
                <div class="box-body">
                    <div class="box-title">
                        <div class="box-title-text">
                            Commande
                        </div>
                        <div id="closeModal" class="box-title-icon">
                            <i class="fas fa-times"></i>
                        </div>
                    </div>
                    <div class="box-content">
                        Vous êtes sure le point de commander un article êtes-vous sure ?
                    </div>
                </div>
                <div class="box-body">
                    <a href="" class="button">Confirmer</a>
                    <a href="" class="button">Annuler</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

